CC=g++ 
CFLAGS=-std=c++14 -Wall -pedantic -pthread -g -v

ifeq ($(OS) , Windows_NT)
CLIBS= -L"C:\OpenGL\SDL2-2.0.5\lib\x64"  -L"C:\OpenGL\SDL2_image-2.0.1\lib\x64" -lSDL2 -lSDL2_image
INC_DIR = -I"C:\OpenGL\includes\\"
SRC=$(wildcard *.cpp)
OBJ=$(SRC:.cpp=.o)
TARGET=program

all : $(TARGET)
	mv $^ ../

$(TARGET) : $(OBJ)
	@$(CC) -o $@ $^ $(CLIBS)

%.o:%.cpp
	@$(CC) -c $< $(CFLAGS) $(INC_DIR) -o $@


.PHONY: clean

clean:
	del  *.o	
else
CLIBS=-lSDL2 -lSDL2_image 

SRC=$(wildcard *.cpp)
OBJ=$(SRC:.cpp=.o)
TARGET=program

all : $(TARGET)
	mv $^ ../

$(TARGET) : $(OBJ)
	@$(CC) -o $@ $^ $(CLIBS)

%.o:%.cpp
	@$(CC) -c $< $(CFLAGS) -o $@


.PHONY: clean

clean:
	rm -f *.ondif
endif

